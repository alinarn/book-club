<%= provide(:title, "password reset") %>
<h2 class="flex justify-center font-custom text-3xl text-coffee-default">reset password</h2>
<div class="grid grid-cols-3">
  <div class="grid col-start-2 col-end-3 place-content-center">
    <%= form_with(model: @user, url: password_reset_path(params[:id]),
                  local: true) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>            
    <div class="text-coffee-default font-roboto-300">
      <%= hidden_field_tag :email, @user.email %>  

      <div class="form-block">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-input" %>
      </div>

      <div class="form-block">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="form-block">
         <%= form.submit "update password", class: "btn-primary w-full mt-2" %>
      </div>
    </div>
    <% end %>
  </div>
</div>