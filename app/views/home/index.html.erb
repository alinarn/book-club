<%= provide(:title, "home") %>
<div class="container md:mx-auto">
  <div class="grid lg:grid-cols-12">
    <div class="md:col-span-4 flex flex-col place-self-center md:pb-32 pb-16">
      <h2 class="main-heading mb-1"> previous reads </h2>
      <%= link_to image_tag(book_img(@books.read.last.image, 'book_cover'), size: "200x300"),
                                                                           read_books_path %>
    </div>
    <div class="md:col-span-4 flex flex-col place-items-center text-maroon pb-16 lg:pb-0">
      <h2 class="main-heading">currently reading:</h2>
      <% @books.map do |book| %>
        <% if book.currently_reading? %>
          <%= link_to image_tag(book_img(book.image, 'book_cover'), size: "280", class: "mt-2"),
                                                                              book_path(book) %>
          <h2 class="font-roboto-300 text-xl mt-1"><%= book.title %></h2>
          <p class="font-roboto mx-4 lg:mx-0 text-center"><%= book.description %></p>
        <% end %>
       <% end %>
    </div>
    <div class="md:col-span-4 flex flex-col place-self-center pb-32">
      <h2 class="main-heading mb-1"> future reads </h2>
      <%= link_to image_tag(book_img(@books.future_read.last.image, 'book_cover'), size: "200x300"),
                                                                          future_read_books_path %>
    </div>
  </div>
</div>