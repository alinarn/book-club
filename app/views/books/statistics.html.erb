<%= provide(:title, "club stats") %>
<div>
  <section class="text-coffee-default">
    <div class="max-w-6xl mx-auto px-5 ">
      <div class="text-center mb-10">
        <h1 class="font-custom mb-4 text-3xl leading-10 tracking-tight sm:text-4xl sm:leading-none md:text-4/5xl">so far read: </h1>
        <p class="text-base font-roboto leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto">we like to keep stats of everything :)</p>
          <div class="flex mt-6 justify-center">
            <div class="w-16 h-1 rounded-full bg-rose inline-flex"></div>
          </div>
      </div>
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 ">
        <div class="p-10 md:w-1/3 md:mb-0 mb-6 flex flex-col ">
          <div class="p-4 transform translate-x-6 -translate-y-6  "  >
            <div class="flex-grow ">
              <h2 class="text-2xl font-custom font-semibold mb-3"><%= pluralize(@books_read.count, 'book') %></h2>
              <% @books_read.each do |book| %>
                <li class="font-roboto-300 text-base"> <%= book.title %> </li>
              <% end %>
            </div>
          </div>
        </div>
        <div class="p-10 md:w-1/3 md:mb-0 mb-6 flex flex-col ">
          <div class="p-4 transform translate-x-6 -translate-y-6 ">
            <div class="flex-grow">
              <h2 class=" text-2xl font-custom font-semibold mb-3">publication year: </h2>
                <%= pie_chart @books_pub_date_by_year  %>
            </div>
          </div>
        </div>
        <div class="p-10 md:w-1/3 md:mb-0 mb-6 flex flex-col ">
          <div class="p-4 transform translate-x-6 -translate-y-6 ">
            <div class="flex-grow">
              <h2 class=" text-2xl font-custom font-semibold mb-3">average pages per month: </h2>
              <p class="leading-relaxed text-justify font-roboto-300">
              <%= Book.read.average(:pages) %> pages
              </p>
            </div>
          </div>
        </div>
  </section>
</div>