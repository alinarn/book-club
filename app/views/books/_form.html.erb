<%= form_with(model: book, local: true) do |form| %>
<%= render 'shared/error_messages', object: form.object %>

<div class="pl-11 text-coffee-default font-semibold font-roboto">
  <div class="mb-1">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block form-text-field" %>
  </div>

  <div class="mb-1">
    <%= form.label :description %>
    <%= form.text_area :description, size: "60x10", class: "block form-text-field" %>
  </div>

  <div class="mb-1">
    <%= form.label :author %>
    <%= form.text_field :author, class: "block form-text-field" %>
  </div>

  <div class="mb-1">
    <%= form.label :publication_date %>
    <%= form.date_select :publication_date, class: "block form-text-field" %>
  </div>

  <div class="mb-2">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: "block form-text-field" %>
  </div>

  <div class="button">
    <%= form.submit %>
  </div>
</div>
<% end %>